{
  "id": "firebase",
  "name": "Firebase",
  "description": "Firebase CLI",
  "keywords": ["firebase", "cli", "cloud"],
  "version": "1.1.0",
  "options": {
    "install": {
      "type": "boolean",
      "description": "Install Firebase CLI",
      "default": true
    },
    "user": {
      "type": "string",
      "description": "User to run the container as",
      "default": "zero",
      "proposals": ["zero", "vscode", "root"]
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["toba.vsfire"]
    }
  }
}
