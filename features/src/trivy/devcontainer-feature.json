{
  "name": "Trivy",
  "description": "Trivy CLI",
  "keywords": ["trivy", "security", "vulnerability", "scanner"],
  "id": "trivy",
  "version": "1.0.1",
  "options": {
    "install": {
      "type": "boolean",
      "description": "Install Trivy",
      "default": true
    }
  },
  "capAdd": ["SYS_PTRACE"],
  "securityOpt": ["seccomp=unconfined"],
  "customizations": {
    "vscode": {
      "extensions": ["AquaSecurityOfficial.trivy-vulnerability-scanner"]
    }
  }
}
