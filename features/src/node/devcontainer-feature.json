{
  "name": "Node.js",
  "description": "Node.js with NPM",
  "keywords": ["node", "javascript", "npm"],
  "id": "node",
  "version": "1.0.7",
  "options": {
    "install": {
      "type": "boolean",
      "description": "Install Node.js",
      "default": true
    },
    "version": {
      "type": "string",
      "description": "Node.js version",
      "default": "lts",
      "proposals": ["lts", "latest", "18", "20", "21"]
    },
    "global_packages": {
      "type": "string",
      "description": "Global packages to install (comma separated)",
      "default": ""
    },
    "user": {
      "type": "string",
      "description": "User to run the container as",
      "default": "zero",
      "proposals": ["zero", "vscode", "root"]
    }
  }
}
