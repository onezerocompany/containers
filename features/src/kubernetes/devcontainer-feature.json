{
  "name": "Kubernetes",
  "description": "Kubernetes CLI tools",
  "keywords": ["kubernetes", "kubectl", "helm", "kustomize"],
  "id": "kubernetes",
  "version": "1.0.0",
  "options": {
    "install": {
      "type": "boolean",
      "description": "Install Kubernetes CLI tools",
      "default": true
    },
    "kubectl": {
      "type": "boolean",
      "description": "Install kubectl",
      "default": true
    },
    "helm": {
      "type": "boolean",
      "description": "Install helm",
      "default": true
    },
    "user": {
      "type": "string",
      "description": "User to run the container as",
      "default": "zero",
      "proposals": ["zero", "vscode", "root"]
    }
  }
}
