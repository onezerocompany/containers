{
  "id": "fastlane",
  "version": "1.0.0",
  "name": "Fastlane",
  "description": "Install fastlane and needed dependencies.",
  "options": {
    "version": {
      "type": "string",
      "proposals": ["latest", "none", "2.0.0", "1.0.0"],
      "default": "latest",
      "description": "Select or enter a fastlane version to install"
    },
    "user": {
      "type": "string",
      "description": "User to run the container as",
      "default": "zero",
      "proposals": ["zero", "vscode", "root"]
    }
  },
  "containerEnv": {
    "FASTLANE_HOME": "/usr/local/fastlane",
    "PATH": "/usr/local/fastlane/bin:${PATH}"
  },
  "dependsOn": {
    "ghcr.io/onezerocompany/devcontainers/features/ruby": {}
  }
}
