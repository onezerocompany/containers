{
  "name": "OneZero Flutter Devcontainer",
  "image": "ghcr.io/onezerocompany/devcontainer-base",
  "features": {
    "ghcr.io/onezerocompany/devcontainers/features/trivy:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/kubernetes:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/node:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/github-cli:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/firebase:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/flutter:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/bun:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/onepassword:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/docker:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/terraform:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/gcloud:1": {},
    "ghcr.io/onezerocompany/devcontainers/features/common-utils:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "workbench.preferredDarkColorTheme": "Default Dark Modern",
        "workbench.preferredLightColorTheme": "Default Light Modern",
        "workbench.colorTheme": "Default Dark Modern",
        "window.autoDetectColorScheme": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "remoteUser": "zero"
}
