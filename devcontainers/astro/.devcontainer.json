{
  "name": "Astro Website Devcontainer",
  "image": "ghcr.io/onezerocompany/devcontainer-base",
  "features": {
    "ghcr.io/onezerocompany/devcontainers/features/node:1.0.8": {},
    "ghcr.io/onezerocompany/devcontainers/features/github-cli:1.0.1": {},
    "ghcr.io/onezerocompany/devcontainers/features/bun:1.1.0": {},
    "ghcr.io/onezerocompany/devcontainers/features/onepassword:1.1.2": {},
    "ghcr.io/onezerocompany/devcontainers/features/common-utils:1.2.3": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "workbench.preferredDarkColorTheme": "Default Dark Modern",
        "workbench.preferredLightColorTheme": "Default Light Modern",
        "workbench.colorTheme": "Default Dark Modern",
        "window.autoDetectColorScheme": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "extensions": [
        "astro-build.astro-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "remoteUser": "zero"
}